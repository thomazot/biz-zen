.header
    &-container
        position: sticky
        top: 0
        background: #fff

        @media (max-width: 568px)
            &.up
                transform: translateY(-52px)

        @media (min-width: 569px)
            &.up
                transform: translateY(-80px)

    @media (min-width: 993px)
        position: relative
        margin-bottom: 0 !important
        padding-bottom: 15px
        background: #fff
        box-shadow: 800px 0 0 #fff, -800px 0 0 #fff
        z-index: 20

        &-container
            background: none
            box-shadow: none
            max-height: 125px