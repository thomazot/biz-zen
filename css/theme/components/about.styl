.about
    &__header
        padding: 20px 0 0

    &__title
        @extend $title-vitrine

    &__content
        font-size: 14px
        font-weight: regular
        text-align: justify
        color: #959595
        padding: 30px 0

    &__figure
        img
            width: 100%
            object-fit: contain

    &__news
        margin: 20px 0
        padding: 38px
        box-shadow: 0 0 0 3px #f4f4f4
        text-align: center

    @media (min-width: 993px)
        &__container
            display: flex
            align-items: center
            flex-wrap: wrap

        &__news
            position: relative
            z-index: 10
            padding-left: 340px
            flex: 1
            min-width: 0
            min-height: 340px

        &__figure
            position: relative
            z-index: 15
            margin-right: -280px

    @media (min-width: viewport)
        &__header
            padding-top: 0

        &__container
            flex-wrap: nowrap

        &__figure
            flex: 0 0 360px

        &__me
            flex: 0 1 360px
            margin-right: 30px