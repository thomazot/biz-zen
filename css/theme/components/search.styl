.search
    &__button
        display: flex
        justify-content: center
        align-items: center
        width: 48px
        height: 48px
        padding: 0
        border-radius: 0
        background: #fff

        .ico
            fill: color1_bg
            width: 17px
            height: 17px

        &:hover
            background: #fff

            .ico
                fill: color1_bg

    &__input
        &:focus::placeholder
            color: transparent

    @media (max-width: 568px)
        .header &.on
            .search
                &__input
                    height: 100%
                    border-radius: 0

    @media (min-width: 569px)
        border-bottom: solid 1px #dcdcdc
        max-width: 210px

        &__input
            box-shadow: none
            border-radius: 0
            border: 0 !important
            font-size: 13px
            font-weight: regular
            color: #e1e1e1
            height: 25px !important
            line-height: 25px !important
            padding: 0 10px !important

        &__button
            width: 40px
            height: 25px
            box-shadow: none